doctype
html
	
	include ./header

	body.cv

		.container-fluid.dk-container

			.row

				.col-xs-6
					h1 
						a(href="/" + lang) Dalibor Knapp

				.col-xs-6.dk-menu
					include ./menu
					a.dk-menu-mobile-icon(onclick="dk.showhide('#mobile_menu')") &#9776;

			.row

				.col-xs-12

					.dk-content

						.dk-content-important.dk-content-offset
							= image.name.toUpperCase()
							br
							= image.meta.join(' / ')

						// primary media
						.dk-content-media.dk-content-offset
							- var primaryMedia = image.media[0]

								if(primaryMedia.type=='image')
									img(src='/media/' + primaryMedia.source, alt="media file")
								if(primaryMedia.type=='vimeo')
									iframe(src="https://player.vimeo.com/video/" + primaryMedia.source, frameborder="0", webkitallowfullscreen, mozallowfullscreen, allowfullscreen)

						.dk-content-text.dk-content-offset

							!= text

						// secondary media
						.dk-content-media.dk-content-offset
							each media in image.media.slice(1)
								if(media.type=='image')
									img(src='/media/' + media.source, alt="media file")
								if(media.type=='vimeo')
									iframe(src="https://player.vimeo.com/video/" + media.source, frameborder="0", webkitallowfullscreen, mozallowfullscreen, allowfullscreen)


		include ./footer